pipeline {
    agent any

    environment {
        IMAGE_NAME = "five-star-chicken"
        CONTAINER_NAME = "chicken-store"
        PORT = "3000"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/sachin-sac825/fivestarchicken.git' // üîÅ Replace with your repo
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t $IMAGE_NAME ."
                }
            }
        }

        stage('Stop Existing Container') {
            steps {
                script {
                    sh """
                        docker stop $CONTAINER_NAME || true
                        docker rm $CONTAINER_NAME || true
                    """
                }
            }
        }

        stage('Run New Container') {
            steps {
                script {
                    sh "docker run -d --name $CONTAINER_NAME -p $PORT:3000 $IMAGE_NAME"
                }
            }
        }
    }

    post {
        success {
            echo "Five Star Chicken site deployed at http://localhost:$PORT"
        }
        failure {
            echo "Something went wrong."
        }
    }
}
